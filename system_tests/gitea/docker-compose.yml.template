version: "3"

networks:
  gitea:
    external: false

services:
  server:
    image: gitea/gitea:1.13.0
    container_name: gitea
    environment:
      - USER_UID=<REPLACE_UID>
      - USER_GID=<REPLACE_GID>
    restart: always
    networks:
      - gitea
    volumes:
      - ./gitea:/data
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
    ports:
      - "3000:3000"
      - "222:22"
      - "3080:3080"
    networks:
      dev-net:
        aliases:
          - gitea.test.local

networks:
  dev-net:
    external:
      name: development
